{
  "name": "typescript-nuxtjs-boilerplate",
  "private": true,
  "version": "0.0.1",
  "description": "My gnarly Nuxt.js project",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nuxt-ts",
    "build": "nuxt-ts build",
    "build:static": "nuxt-ts build --spa",
    "build:dev": "cross-env NODE_ENV=development nuxt-ts build",
    "build:stg": "cross-env NODE_ENV=staging nuxt-ts build",
    "build:prod": "cross-env NODE_ENV=production nuxt-ts build",
    "start": "nuxt-ts start",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lintfix": "eslint --fix --ext .js,.ts,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "test": "jest",
    "clean:cache": "rm -rf node_modeles/.cache/hard-source",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "docker:dev": "node tools/preprocessor.js dev && docker-compose -f docker-compose.dev.yml up --build",
    "docker:stg": "node tools/preprocessor.js stg && docker-compose -f docker-compose.stg.yml up --build",
    "docker:prod": "node tools/preprocessor.js prod && docker-compose -f docker-compose.prod.yml up --build",
    "clean:dev": "node tools/preprocessor.js dev && docker-compose build --no-cache && docker-compose up",
    "clean:stg": "node tools/preprocessor.js stg && docker-compose build --no-cache && docker-compose up",
    "clean:prod": "node tools/preprocessor.js prod && docker-compose build --no-cache && docker-compose up",
    "container-prune": "docker container prune",
    "image-prune": "docker image prune",
    "system-prune": "docker system prune",
    "stats": "docker container stats"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "author": {
    "name": "hisasann",
    "email": "hisasann25@gmail.com",
    "url": "https://github.com/hisasann"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hisasann/typescript-nuxtjs-boilerplate.git"
  },
  "keywords": [
    "nuxt-ts",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/hisasann/typescript-nuxtjs-boilerplate/issues"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.4.1",
    "@nuxtjs/pwa": "^3.0.0-beta.14",
    "@types/webpack": "^4.4.26",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "js-cookie": "^2.2.0",
    "nuxt-client-init-module": "^0.1.4",
    "nuxt-env": "^0.1.0",
    "nuxt-property-decorator": "^2.1.3",
    "nuxt-ts": "^2.4.5",
    "vue-lazyload": "^1.2.6"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^0.0.1",
    "@nuxtjs/style-resources": "^0.1.2",
    "@storybook/vue": "^5.0.3",
    "@types/babel-core": "6.25.6",
    "@types/eslint": "^4.16.6",
    "@types/eslint-plugin-prettier": "2.2.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/js-cookie": "^2.2.1",
    "@types/prettier": "1.16.1",
    "@types/storybook__vue": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-preset-vue": "^2.0.2",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": ">=12.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": ">=2.16.0",
    "eslint-plugin-jest": ">=22.4.1",
    "eslint-plugin-node": ">=8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-promise": ">=4.0.1",
    "eslint-plugin-standard": ">=4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "prettier": "1.16.4",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "vue-jest": "^3.0.4"
  }
}
