{
  "extends": "@nuxt/typescript",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "*": ["types/*"]
    },
    "strictPropertyInitialization": false,
    "target": "es5",
    "types": [
      "@types/node",
      "@types/jest",
      "@types/webpack",
      "@nuxt/vue-app"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "types/**/*.d.ts"],
  "exclude": ["node_modules", "stories"]
}
